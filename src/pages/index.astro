---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nieuserver.online - Minecraft & Terraria Server Hub</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        header {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                        url('https://images.unsplash.com/photo-1607513746994-51f730a44832?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 0 20px;
        }
        
        header h1 {
            font-size: 3.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
        
        header .domain {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #4CAF50;
            font-weight: bold;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }
        
        header p {
            font-size: 1.2rem;
            max-width: 700px;
            margin-bottom: 30px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }
        
        .btn {
            display: inline-block;
            padding: 12px 30px;
            background: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            background: #45a049;
            transform: translateY(-2px);
        }
        
        .server-cards {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin: 50px 0;
        }
        
        .card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            width: 45%;
            min-width: 300px;
            margin: 20px 0;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-10px);
        }
        
        .card-img {
            height: 200px;
            background-size: cover;
            background-position: center;
        }
        
        .minecraft-img {
            background-image: url('https://images.unsplash.com/photo-1587573089734-599851b0c8b6?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        }
        
        .terraria-img {
            background-image: url('https://images.unsplash.com/photo-1627855437693-dcc7b0c4ba7a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        }
        
        .card-content {
            padding: 25px;
        }
        
        .card-content h2 {
            margin-bottom: 15px;
            color: #2c3e50;
        }
        
        .card-content p {
            margin-bottom: 20px;
            color: #7f8c8d;
        }
        
        footer {
            background: #2c3e50;
            color: white;
            text-align: center;
            padding: 30px 0;
            margin-top: 50px;
        }
        
        footer .domain {
            font-weight: bold;
            color: #4CAF50;
            font-size: 1.2rem;
        }
        
        nav {
            background: #2c3e50;
            padding: 15px 0;
        }
        
        nav ul {
            display: flex;
            justify-content: center;
            list-style: none;
        }
        
        nav ul li {
            margin: 0 20px;
        }
        
        nav ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }
        
        nav ul li a:hover {
            color: #4CAF50;
        }
        
        .status {
            text-align: center;
            margin: 40px 0;
        }
        
        .server-stats {
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin: 40px auto;
            max-width: 800px;
        }
        
        .server-stats h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #2c3e50;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }
        
        .stat-item {
            text-align: center;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 5px;
        }
        
        .stat-item .number {
            font-size: 2rem;
            font-weight: bold;
            color: #4CAF50;
        }
    </style>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/minecraft">Minecraft Server</a></li>
            <li><a href="/terraria">Terraria Server</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </nav>
    
    <header>
        <h1>Welcome to Nieuserver</h1>
        <div class="domain">nieuserver.online</div>
        <p>Your premium destination for high-quality Minecraft and Terraria gaming servers. Join our community today!</p>
        <a href="#servers" class="btn">Explore Servers</a>
    </header>
    
    <div class="container">
        <section class="server-stats">
            <h2>Server Statistics</h2>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="number">24/7</div>
                    <div class="label">Uptime</div>
                </div>
                <div class="stat-item">
                    <div class="number">50+</div>
                    <div class="label">Active Players</div>
                </div>
                <div class="stat-item">
                    <div class="number">2</div>
                    <div class="label">Game Servers</div>
                </div>
                <div class="stat-item">
                    <div class="number">99%</div>
                    <div class="label">Satisfaction</div>
                </div>
            </div>
        </section>
        
        <section id="servers" class="server-cards">
            <div class="card">
                <div class="card-img minecraft-img"></div>
                <div class="card-content">
                    <h2>Minecraft Server</h2>
                    <p>Join our vibrant Minecraft community with custom mods, survival worlds, and minigames. Perfect for both casual and hardcore players.</p>
                    <a href="/minecraft" class="btn">Server Details</a>
                </div>
            </div>
            
            <div class="card">
                <div class="card-img terraria-img"></div>
                <div class="card-content">
                    <h2>Terraria Server</h2>
                    <p>Explore our Terraria world with enhanced gameplay, regular events, and a friendly community. Adventure awaits!</p>
                    <a href="/terraria" class="btn">Server Details</a>
                </div>
            </div>
        </section>
        
        <section class="status">
            <h2>Server Status</h2>
            <p>All servers are currently online and operational.</p>
            <!-- You can add actual server status indicators here later -->
        </section>
    </div>
    
    <footer>
        <p>&copy; 2023 <span class="domain">nieuserver.online</span> - All Rights Reserved</p>
        <p>Connect with us on Discord and other social platforms!</p>
    </footer>
</body>
</html>