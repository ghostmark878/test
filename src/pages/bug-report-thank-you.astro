---
import Layout from '../layouts/BlogPost.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thank You! | Nieuserver.online</title>
    <style>
        :root {
            --bg-dark: #1a1a1a;
            --card-bg: #383838;
            --text-primary: #e0e0e0;
            --accent-green: #4CAF50;
            --border-radius: 8px;
        }
        
        body {
            background-color: var(--bg-dark);
            color: var(--text-primary);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }
        
        header {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                        url('https://images.unsplash.com/photo-1587202372775-e229f172cdd0?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
            height: 250px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            border-bottom: 4px solid var(--accent-green);
        }
        
        .card {
            background: var(--card-bg);
            border-radius: var(--border-radius);
            padding: 30px;
            margin: 30px 0;
            border: 1px solid var(--accent-green);
        }
        
        h1 {
            color: var(--accent-green);
            margin-bottom: 20px;
        }
        
        .btn {
            background: var(--accent-green);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s;
            display: inline-block;
            text-decoration: none;
            margin-top: 20px;
        }
        
        .btn:hover {
            background: #45a049;
        }
        
        /* Navigation (same as bug-report.html) */
        nav {
            background: #1a1a1a;
            padding: 15px 0;
            border-bottom: 2px solid var(--accent-green);
        }
        
        nav ul {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            list-style: none;
            gap: 20px;
            margin: 0;
            padding: 0;
        }
        
        nav ul li a {
            color: #e0e0e0;
            text-decoration: none;
            font-weight: bold;
            padding: 8px 15px;
            border-radius: 4px;
            transition: all 0.3s ease;
        }
        
        nav ul li a:hover {
            color: var(--accent-green);
            background: rgba(76, 175, 80, 0.1);
        }
    </style>
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/minecraft">Minecraft</a></li>
            <li><a href="/bug-report">Bug Report</a></li>
        </ul>
    </nav>
    
    <header>
        <h1>Thank You!</h1>
        <p>Your bug report has been successfully submitted</p>
    </header>
    
    <div class="container">
        <div class="card">
            <p>We appreciate your help in improving Nieuserver. Our team will review your report shortly.</p>
            <p>You'll only be contacted if we need additional information.</p>
            <a href="/" class="btn">Return to Homepage</a>
            <a href="/bug-report" class="btn" style="background: #3498db;">Submit Another Report</a>
        </div>
    </div>
</body>
</html>